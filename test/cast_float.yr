mod cast_float;

import ymirc::utils::_;
import utils;

import std::io;

// Test for casting on float to floats
__test {
    logging::setRelativeTime ();
    logging::info (" Test cast float 1 start"s8);

    let (gens, errors) = utils::compileFile ("test_resources/cast_float/test1.yr"s8);
    utils::compareResultWithFile (gens, "test_resources/cast_float/test1_out.txt"s8);
    utils::ensureErrorEmpty (errors);

    logging::success (" Test cast float 1 finished"s8);
}

