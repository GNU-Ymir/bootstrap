in templates_class;

use ymirc::utils::_;
use utils;

__test {
    logging::setRelativeTime ();
    logging::info ("Test template class 1 start");

    let res = utils::compileFile ("test_resources/templates/class/test1.yr", withLint-> true);
    utils::ensureErrorEmpty (res.err);
    utils::compareResultWithFile (res.sem, "test_resources/templates/class/test1_out.txt");
    utils::compareResultWithFile (res.exp, "test_resources/templates/class/test1_yil.txt");

    logging::success (" Test template class 1 end");
}

