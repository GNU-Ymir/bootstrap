in scope_guards;

use ymirc::utils::_;
use utils;

use std::io;


__test {
    logging::setRelativeTime ();
    logging::info ("Test scope guards 1 start");

    let res = utils::compileFile ("test_resources/scope_guards/test1.yr", withLint-> true);
    utils::ensureErrorEmpty (res.err);
    utils::compareResultWithFile (res.sem, "test_resources/scope_guards/test1_out.txt");
    utils::compareResultWithFile (res.exp, "test_resources/scope_guards/test1_yil.txt", onlyFrames-> true);

    logging::success ("Test scope guards 1 finished");
}

