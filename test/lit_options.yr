mod lit_options;

import ymirc::utils::_;
import utils;


__test {
    logging::setRelativeTime ();
    logging::info (" Test lit options 1 start"s8);

    let res = utils::compileFile ("test_resources/lit_options/test1.yr"s8, withLint-> true);
    utils::ensureErrorEmpty (res.err);
    utils::compareResultWithFile (res.sem, "test_resources/lit_options/test1_out.txt"s8);
    utils::compareResultWithFile (res.exp, "test_resources/lit_options/test1_yil.txt"s8);

    logging::success (" Test lit options 1 finished"s8);
}

