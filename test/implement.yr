in implement;

use ymirc::utils::_;
use utils;

use std::io;

// Test implementations of traits
__test {
    logging::setRelativeTime ();
    logging::info (" Test lit class operators 1 start");

    let res = utils::compileFile ("test_resources/implement/test1.yr", withLint-> true);
    utils::ensureErrorEmpty (res.err);
    utils::compareResultWithFile (res.sem, "test_resources/implement/test1_out.txt");
    utils::compareResultWithFile (res.exp, "test_resources/implement/test1_yil.txt");

    logging::success (" Test lit class operators 1 finished");
}

