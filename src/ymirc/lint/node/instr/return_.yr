in return_;

use ymirc::lint::node::{base, instr::base, value::base};

use ymirc::lexing::word;
use ymirc::utils::format;

/**
 * A Ymir Intermediate Language Return
 * */
@final
pub class YILReturn over YILInstr {

    // The left operand
    let _value : &YILValue;


    pub self (loc : &Word, value : &YILValue)
        with super (loc)
        , _value = value
    {}

    /*!
     * ================================================================================
     * ================================================================================
     * =========================           GETTERS            =========================
     * ================================================================================
     * ================================================================================
     */


    pub fn getValue (self)-> &YILValue {
        self._value
    }


    /*!
     * ================================================================================
     * ================================================================================
     * =========================          COMPARISON          =========================
     * ================================================================================
     * ================================================================================
     */

    /**
     * Compare two nodes
     * @returns: true, iif the two nodes are strictly identical
     */
    pub over opEquals (self, o : &YILNode)-> bool {
        match o {
            v : &YILReturn => {
                self._value == v._value
            }
            _ => { false }
        }
    }

    /*!
     * ================================================================================
     * ================================================================================
     * =========================        MISCELLANEOUS         =========================
     * ================================================================================
     * ================================================================================
     */

    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream : &Formatter) {
            stream:.write ("return ", self._value);
        }
    }

}
