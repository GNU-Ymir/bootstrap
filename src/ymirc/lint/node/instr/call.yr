in call;

use ymirc::lint::node::value;

use ymirc::lexing::word;
use ymirc::utils::{format, packet};
use std::stream;

/**
 * A Ymir Intermediate Language Call
 * */
@final
pub class YILCall over YILInstr {

    // The left operand
    let _content : &YILValue;


    pub self (loc : &Word, content : &YILValue)
        with super (loc)
        , _content = content
    {}

    /*!
     * ================================================================================
     * ================================================================================
     * =========================           GETTERS            =========================
     * ================================================================================
     * ================================================================================
     */

    pub fn getContent (self)-> &YILValue {
        self._content
    }

    /*!
     * ================================================================================
     * ================================================================================
     * =========================          COMPARISON          =========================
     * ================================================================================
     * ================================================================================
     */

    /**
     * Compare two nodes
     * @returns: true, iif the two nodes are strictly identical
     */
    pub over opEquals (self, o : &YILNode)-> bool {
        match o {
            v : &YILCall => {
                if self._content != v._content return false;
                true
            }
            _ => { false }
        }
    }

    /*!
     * ================================================================================
     * ================================================================================
     * =========================        MISCELLANEOUS         =========================
     * ================================================================================
     * ================================================================================
     */

    impl Packable {
        pub over packName (self, ref dmut out : [u8]) {
            self.super.packName (ref out);
        }
    }

    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream : &Formatter) {
            stream:.write (self._content);
        }
    }

}
