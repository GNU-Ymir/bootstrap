in operator;

use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::binary;
mod ::cast_;
mod ::checker;
mod ::cte_;
mod ::macro_;
mod ::mult;
mod ::named;
mod ::path;
mod ::pragma;
mod ::template;
mod ::unary;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def BinaryExpr:           binary::BinaryExpr;
pub def CastExpr:             cast_::CastExpr;
pub def CteExpr:              cte_::CteExpr;
pub def MacroCallExpr:        macro_::MacroCallExpr;
pub def MultOperatorExpr:     mult::MultOperatorExpr;
pub def NamedExpr:            named::NamedExpr;
pub def PathExpr:             path::PathExpr;
pub def PragmaExpr:           pragma::PragmaExpr;
pub def TemplateCallExpr:     template::TemplateCallExpr;
pub def TemplateCheckerExpr:  checker::TemplateCheckerExpr;
pub def UnaryExpr:            unary::UnaryExpr;


/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * The ancestor of all kind of operator
 */
@abstract
pub class OperatorExpr over Expression {
    pub self (loc : &Word)
        with super (loc)
    {}
}
