in lambda;

use ymirc::syntax::declaration::function;
use ymirc::syntax::expression::empty;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of a lambda value composition value.
 *
 */
@final
pub class LambdaExpr over ComposeExpr {

    /*! Public fields */
    pub {
        // The prototype of the lambda
        let proto: FunctionPrototype;

        // The content of the lambda
        let body: &Expression;
    }
        
    /**
     * @params: 
     *    - loc: the location of the lambda value
     *    - proto: the prototype of the lambda value
     *    - body: the body of the lambda      
     */
    pub self (loc: &Word, proto: FunctionPrototype, body: &Expression)
        with super (loc)
        , proto = proto
        , body = body
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Tokens::PIPE);                        
            stream:.entabing ();            
            for i, e in self.proto.params {
                if (i != 0) stream:.write (Tokens::COMA, " ");
                e.format (alias stream);                
            }                        
            stream:.write (Tokens::PIPE);
            if self.proto.retType !of EmptyExpr {
                stream:.write (Tokens::ARROW, " ");
                self.proto.retType.format (alias stream);                
            }

            stream:.write (" ");

            stream:.write (' ', Tokens::LACC, Tokens::RETURN);
            self.body.format (alias stream);            
            stream:.detabing ();
            
            stream:.write (Tokens::RACC);            
        }
    }
    
}
