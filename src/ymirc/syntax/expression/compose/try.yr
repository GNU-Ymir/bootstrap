in try;

use std::stream;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;


/**
 * Syntaxic node representation of a try expression
 *
 */
@final
pub class TryExpr over ComposeExpr {

    pub {
        // The content of the try
        let value: &Expression;
    }

    /**
     * @params: 
     *    - loc:   the location of the try
     *    - value: the value of the try
     */
    pub self (loc: &Word, value: &Expression)
        with super (loc)
        , value = value
    {}
        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Tokens::LPAR);
            self.value.format (alias stream);
            stream:.write (Tokens::RPAR, Tokens::INTEG);
        }        
    }
    
}
