in empty;

use std::stream;
use ymirc::lexing::word;
use ymirc::utils::format;


/**
 * EmptyExpr is an immutable class, every instances are similr, therefore only
 * one instance is needed
 * 
 * */
pub lazy EMPTY_EXPR = copy EmptyExpr ();


/**
 * Syntaxic reprensentation of a empty expression. Used as a place holder in
 * other composed expression, to defines that nothing was defined, and default
 * behavior has to be adopted.
 * 
 */
@final
pub class EmptyExpr over Expression {

    pub self withLoc (loc : &Word)
        with super (loc)
    {}

    pub self ()
        with super (EOF_WORD)
    {}
        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream : &Formatter) {
            stream:.write ("<empty>");
        }        
    }    
}
