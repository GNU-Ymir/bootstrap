in memory;

use std::stream;

use ymirc::lexing::{word, keys};
use ymirc::utils::format;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ===================================          SUBMODULES          ===================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::alias_;
mod ::copy_;
mod ::expand_;
mod ::move_;
mod ::ref_;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def AliasExpr:  alias_::AliasExpr;
pub def CopyExpr:   copy_::CopyExpr;
pub def ExpandExpr: expand_::ExpandExpr;
pub def MoveExpr:   move_::MoveExpr;
pub def RefExpr:    ref_::RefExpr;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * A memory expression, applying a memory transformation on a value
 * 
 */
@abstract
pub class MemoryExpr over Expression {

    pub {
        // The content of the expression
        let content: &Expression;
    }

    /**
     * @params: 
     *    - loc:     the location and identifier of the named expression     
     *    - content: the content of the expression
     */
    pub self (loc: &Word, content: &Expression)
        with super (loc)
        , content = content        
    {}
    
    impl Streamable;
    impl Formattable;
}
