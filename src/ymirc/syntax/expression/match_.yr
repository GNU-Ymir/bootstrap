in match_;

use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::list;
mod ::option;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def MatchListFilterExpr: list::MatchListFilterExpr;
pub def MatchOptionFilterExpr: option::MatchOptionFilterExpr;


/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * Ancestor class of all pattern matching filters
 * */
@abstract
pub class MatchFilterExpr over Expression {
    pub self (loc: &Word)
        with super (loc)
    {}
}
