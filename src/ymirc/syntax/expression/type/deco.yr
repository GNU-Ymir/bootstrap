in deco;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of a decorated expression, to set the inner type as mutable or immutable.
 * 
 */
@final
pub class DecoratedTypeExpr over TypeExpr {

    pub {
        // The decorator
        let kind: Decorators;

        // The content of the expression
        let content: &Expression;
    }
    
    /**
     * @params:
     *    - loc: the location of the expression
     *    - content: the type being decorated
     *    - deco: the decorator used
     */
    pub self (loc: &Word, deco: Decorators, content: &Expression)
        with super (loc)
        , content = content
        , kind = deco
    {}

        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.kind, ' ');
            stream:.entabing ();
            self.content.format (alias stream);
            stream:.detabing ();
        }
    }

}
