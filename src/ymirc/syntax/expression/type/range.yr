in range;

use std::stream;

use ymirc::lexing::{word, tokens};
use ymirc::utils::format;


/**
 * Syntaxic representation of range expression literal.
 *
 */
@final
pub class RangeTypeExpr over TypeExpr {

    // The type of the range
    let type: &Expression;
    
    /**
     * @params: 
     *    - loc: the location of the literal
     *    - type: the type of the expression
     */
    pub self (loc: &Word, type: &Expression)
        with super (loc)
        , type = type
    {}

        
    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting of the dollar literal inside the stream
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Tokens::LPAR)
                :.write (Tokens::DDOT)
                :.write (self.type)
                :.write (Tokens::RPAR);
        }         
    }
    
}
