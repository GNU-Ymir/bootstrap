in typeof_;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of a typeof expression.
 * 
 */
@final
pub class TypeOfExpr over TypeExpr {

    /*! Public fields */
    pub {
        // The value whose type has to be computed
        let value: &Expression;
    }
    
    /**
     * @params:
     *    - loc:   the location of the expression
     *    - value: the type returned by the typeof
     */
    pub self (loc: &Word, value: &Expression)
        with super (loc)
        , value = value
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::TYPEOF, ' ', Tokens::LPAR);
            stream:.entabing ();
            self.value.format (alias stream);
            stream:.write (Tokens::RPAR);
            stream:.detabing ();
        }
    }

}
