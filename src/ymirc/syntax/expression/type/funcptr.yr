in funcptr;

use ymirc::syntax::expression::instruction; // VarDeclExpr;

use std::stream;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of a function pointer type
 *
 */
@final
pub class FunctionPtrTypeExpr over TypeExpr {
    
    pub {

        // True iif the pointer is a `dg`, a `fn` otherwise
        let isDelegate: bool;
        
        // The parameters of the type
        let params: [&VarDeclExpr];

        // The return type
        let retType: &Expression;
    }

    /**
     * @params: 
     *    - loc:        the location of the expression
     *    - isDelegate: true iif the function pointer is a delegate
     *    - params:     the parameters of the function pointer
     *    - retType:    the return type of the function pointer
     *    
     */
    pub self (loc: &Word, isDelegate: bool, params: [&VarDeclExpr], retType: &Expression)
        with super (loc)
        , isDelegate = isDelegate
        , params = params
        , retType = retType
    {}

        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            if self.isDelegate
                stream:.write (Keys::DELEGATE);
            else
                stream:.write (Keys::FUNCTION);
            
            stream:.write (" ", Tokens::LPAR);
            stream:.entabing ();            
            for i, v in self.params {
                if (i != 0) stream:.write (", ");
                v.format (alias stream);                
            }
            stream:.write (Tokens::RPAR, Tokens::ARROW, ' ');
            self.retType.format (alias stream);
            stream:.detabing ();            
        }
    }

}

