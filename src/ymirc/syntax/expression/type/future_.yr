in future_;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of a function pointer type.
 * 
 */
@final
pub class FutureTypeExpr over TypeExpr {

    /*! Public fields */
    pub {
        // The return type of the future
        let retType: &Expression;
    }
    
    /**
     * @params:
     *    - loc: the location of the expression
     *    - content: the type returned by the future
     */
    pub self (loc: &Word, retType: &Expression)
        with super (loc)
        , retType = retType
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::FUTURE, Tokens::ARROW, " ", Tokens::LPAR);
            stream:.entabing ();
            self.retType.format (alias stream);
            stream:.write (Tokens::RPAR);
            stream:.detabing ();
        }
    }

}
