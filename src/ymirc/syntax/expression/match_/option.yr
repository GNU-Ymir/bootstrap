in option;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of a option matcher expression i.e. Ok (_), Err (_)
 *
 */
@final
pub class MatchOptionFilterExpr over MatchFilterExpr {

    pub {
        // The kind of filter
        let kind: MatchOptionFilters; 
        
        // The inner filter
        let inner: &Expression;        
    }
    
    /**
     * @params:
     *    - loc: the location and operator of the expression
     *    - inner: the inner matcher of the expression
     */
    pub self (loc: &Word, kind: MatchOptionFilters, inner: &Expression)
        with super (loc)
        , kind = kind
        , inner = inner
    {}

    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting of the binary expression inside the stream
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.kind, ' ', Tokens::LPAR);
            self.inner.format (alias stream);
            stream:.write (Tokens::RPAR);
        }
    }
}
