in string;

use std::stream;
use ymirc::lexing::keys;
use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * Syntaxic representation of a string literal.
 *
 */
@final
pub class StringExpr over LiteralExpr {

    /*! Public fields */
    pub {
        // The location of the end of the expression
        let end: &Word;

        // The content of the string
        let seq: [c8];

        // The suffix of the literal
        let suffix: &Word;

        // The left trim of the string (for multiline string literals)
        let trim: u32; 
    }
    
    /**
     * @params: 
     *   - loc:    the location of the string (first quote)
     *   - end:    the end of the string (last quote)
     *   - seq:    the strings forming the string literal
     *   - suffix: the suffix after the string literal (e.g. 's8', 's32', ...)
     *   - trim:   the left trim of the string (for multiline strings)
     */
    pub self (loc: &Word, end: &Word, seq: [c8], suffix: &Word, trim: u32)
        with super (loc)
        , end = end
        , seq = seq
        , suffix = suffix
        , trim = trim
    {}
        
    impl Streamable;
    impl Formattable {    
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.loc.str)
                :.write (self.seq)
                :.write (self.end.str);

            if !self.suffix.isEof
                stream:.write (self.suffix.str);
        }
    }
    
}
