in version;

use std::stream;
use ymirc::lexing::keys;
use ymirc::lexing::{keys, word, tokens};
use ymirc::utils::format;

/**
 * A version expression, that retrieve the value associated to a given version
 * if defined
 *
 */
@final
pub class VersionExpr over LiteralExpr {

    /*! Public fields */
    pub {
        // The version identifier
        let version: &Word;
    }
    
    /**
     * @params: 
     *    - loc: the location of the literal
     */
    pub self (loc: &Word, version: &Word)
        with super (loc)
        , version = version
    {}
            
    impl Streamable;
    impl Formattable {
        
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::VERSION)
                :.write ('(')
                :.write (self.version.str)
                :.write (')');
        }        
    }
    
}
