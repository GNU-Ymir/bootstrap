in char;

use std::stream;

use ymirc::lexing::{word, keys, tokens};
use ymirc::utils::format;

/**
 * Syntaxic representation of a char literal
 *
 */
@final
pub class CharExpr over LiteralExpr {

    // The location of the end of the expression
    let end: &Word;

    // The content of the char
    let seq: [c8];

    // The suffix
    let suffix: &Word;

    /**
     * @params: 
     *   - loc:    the location of the char (first quote)
     *   - end:    the end of the char (last quote)
     *   - seq:    the chars forming the char literal
     *   - suffix: the suffix after the char literal (e.g. 'c8', 'c16', ...)
     */
    pub self (loc: &Word, end: &Word, seq: [c8], suffix: &Word = EOF_WORD)
        with super (loc)
        , end = end
        , seq = seq
        , suffix = suffix
    {}

        
    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting the char into the stream
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Tokens::SQUOTE)
                :.write (self.seq)
                :.write (Tokens::SQUOTE);

            if !self.suffix.isEof {
                stream:.write (self.suffix.str);
            }            
        }
    }
    
}
