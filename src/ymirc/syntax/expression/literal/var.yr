in var;

use std::stream;

use ymirc::lexing::word;
use ymirc::utils::format;

/**
 * Syntaxic representation of a var literal.
 * 
 */
@final
pub class VarExpr over LiteralExpr {
    
    /**
     * @params: 
     *    - name: the name of the var literal
     */
    pub self (name: &Word)
        with super (name)
    {}

    /**
     * @returns: the name of the variable
     * */
    @field
    pub fn name (self)-> &Word {
        self.loc
    }

    
    impl Streamable;
    impl Formattable {

        pub over format (self, dmut stream : &Formatter) {
            stream:.write (self.loc.str);
        }        
    }
    
}


