in fixed;

use std::stream;
use ymirc::lexing::keys;
use ymirc::lexing::{word, tokens};
use ymirc::utils::format;


/**
 * Syntaxic representation of a fixed number literal.
 * 
 */
@final
pub class FixedExpr over LiteralExpr {

    /*! Public fields */
    pub {
        // The suffix of the literal (i8, u64...)
        let suffix: &Word;
    }
    
    /**
     * @params: 
     *   - int: the integral part of the number     
     *   - suffix: the suffix type of the literal
     */
    pub self (int: &Word, suffix: &Word)
        with super (int)        
        , suffix = suffix
    {}

    /**
     * @returns: the integral part of the number
     * */
    @field
    pub fn int (self)-> &Word {
        self.loc
    }
    
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {            
            stream:.write (self.int.str);
            if !self.suffix.isEof
                stream:.write (self.suffix.str);
        }        
    }

}
