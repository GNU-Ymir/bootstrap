in mult;

use std::stream;

use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * A macro mult is a list of macro rules used inside a macro rules, with a multiplier
 *
 */
@final
pub class MacroMultExpr over MacroRuleExpression {

    /*! Public fields */
    pub {
        // The end of the expression
        let end: &Word;

        // The kind of multiplier
        let mult: &Word;

        // The content of the macro rule
        let content: [&MacroRuleExpression];
    }
    
    /**
     * @params: 
     *   - loc:     the location of the multiplier
     *   - end:     the closing location of the multiplier
     *   - content: the list of macro rules inside the multiplier
     *   - mult:    the type of multiplier 
     */
    pub self (loc: &Word, end: &Word, content: [&MacroRuleExpression], mult: &Word = EOF_WORD)
        with super (loc)
        , end = end
        , content = content
        , mult = mult
    {}
        
    impl Streamable;
    impl Formattable {
        
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Tokens::LPAR);
            stream:.entabing ();
            
            for i, elem in self.content {
                if (i != 0) stream:.write (' ');
                elem.format (alias stream);                
            }
            
            stream:.detabing ();
            stream:.write (Tokens::RPAR, self.mult.str);
        }
    }

}
