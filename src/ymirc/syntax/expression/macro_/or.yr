in or;

use std::stream;

use ymirc::lexing::{word, tokens};
use ymirc::utils::format;


/**
 * A macro or is used to choose between two possible macro rules
 *
 */
@final
pub class MacroOrExpr over MacroRuleExpression {

    /*! Public fields */
    pub {            
        // The left operand
        let left: &MacroRuleExpression;

        // The right operand
        let right: &MacroRuleExpression;
    }
    
    /**
     * @params: 
     *    - loc:  the location of the macro or
     *    - left: the left macro
     */
    pub self (loc: &Word, left: &MacroRuleExpression, right: &MacroRuleExpression)
        with super (loc)
        , left = left
        , right = right
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {            
            self.left.format (alias stream);
            stream:.write (' ', Tokens::PIPE, ' ');
            self.right.format (alias stream);
        }
    }

}
