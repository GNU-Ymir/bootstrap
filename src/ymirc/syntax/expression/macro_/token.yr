in token;

use ymirc::syntax::expression::literal;

use std::stream;

use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * A macro token is just a string literal that must be found in the macro
 * specialization.
 *
 */
@final
pub class MacroTokenExpr over MacroRuleExpression {

    /*! Public fields */
    pub {
        // The string literal holding the value to compare
        let str: &StringExpr;
    }

    /**
     * @params: 
     *    - loc: the location of the token
     *    - str: the content of the token
     */
    pub self (loc: &Word, str: &StringExpr)
        with super (loc)
        , str = str
    {}
        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            self.str.format (alias stream);
        }        
    }

}
