in ident;

use std::stream;

use ymirc::lexing::word;
use ymirc::utils::format;

/**
 * A macro ident is a named identifier in a macro rule.
 *
 */
@final
pub class MacroIdentExpr over MacroRuleExpression {
    
    /**
     * @params:
     *    - loc: the location of the ident     
     */
    pub self (name: &Word)
        with super (name)        
    {}

    @field
    pub fn name (self)-> &Word {
        self.loc
    }
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.name.str);
        }
    }

}
