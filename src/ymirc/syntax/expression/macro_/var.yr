in var;

use std::stream;

use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * A var is used to associate a macro rule to an identifier, and reuse the
 * result later on
 *
 */
@final
pub class MacroVarExpr over MacroRuleExpression {

    /*! Public fields */
    pub {
        // The sub rule associated to the var
        let rule: &MacroRuleExpression;
    } 

    /**
     * @params: 
     *    - loc: the location of the macro var
     *    - name: the name of the var
     *    - rule: the sub macro rule associated to the var
     */
    pub self (name: &Word, rule: &MacroRuleExpression)
        with super (name)        
        , rule = rule
    {}
    
    @field
    pub fn name (self)-> &Word {
        self.loc
    }
    
            
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.name.str, Tokens::EQUAL);
            stream:.entabing ();
            self.rule.format (alias stream);
            stream:.detabing ();
        }
    }

}
