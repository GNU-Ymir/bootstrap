in type;

use ymirc::lexing::word;


/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::range;
mod ::deco;
mod ::funcptr;
mod ::future_;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def RangeTypeExpr:       range::RangeTypeExpr;
pub def DecoratedTypeExpr:   deco::DecoratedTypeExpr;
pub def FunctionPtrTypeExpr: funcptr::FunctionPtrTypeExpr; 
pub def FutureTypeExpr:      future_::FutureTypeExpr;


/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * Ancestor class of expression that are generally associated to types.
 * 
 * */
@abstract
class TypeExpr over Expression {
    pub self (loc: &Word)
        with super (loc)
    {}    
}
