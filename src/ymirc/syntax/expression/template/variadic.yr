in variadic;

use std::stream;

use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * Syntaxic representation of a variadic template var 
 *
 */
@final
pub class TemplateVariadicVarExpr over TemplateExpression {

    /*! Public fields */
    pub {
        // True if the a value, false if a type
        let isValue: bool;

        // The name of the var
        let name: [c8];
    }
    
    /**
     * @params: 
     *    - loc:     the location of the literal
     *    - name:    the name of the variable
     *    - isValue: is a variadic value (opposing to type)
     */
    pub self (loc: &Word, name: [c8], isValue: bool)
        with super (loc)
        , name = name
        , isValue = isValue
    {}

        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.name);
            if (self.isValue)
                stream:.write (Tokens::COLON, ' ');
            stream:.write (Tokens::TDOT);
        }        
    }

}
