in and;

use std::stream;
use ymirc::syntax::expression::template::ofvar;

use ymirc::lexing::keys;
use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * A template and expression, defining a And constraint between multiple OfVar constraints
 *
 */
@final
pub class TemplateAndExpr over TemplateExpression {

    /*! Public fields */
    pub {
        let inners: [&TemplateOfVarExpr];
    }

    /**
     * @params:
     *    - loc: the location of the and
     *    - inners: the template specialization to check
     * */
    pub self (loc: &Word, inners: [&TemplateOfVarExpr])
        with super (loc)
        , inners = inners
    {}
        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {            
            for i, elem in self.inners {
                if (i != 0us) stream:.write (' ', Tokens::DAND);
                stream:.write (' ', elem.kind, ' ');
                stream:.entabing ();
                elem.spec.format (alias stream);
                stream:.detabing ();
            }
        }
    }

}
