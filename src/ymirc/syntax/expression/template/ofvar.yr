in ofvar;

use std::stream;
use ymirc::lexing::keys;
use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * A template of var is used to specialize a template argument
 *
 */
@final
pub class TemplateOfVarExpr over TemplateExpression {

    /*! Public fields */
    pub {
        // The type of ofvar
        let kind: TemplateOfVarType;
        
        // The specialization operand
        let spec: &Expression;
    }
    
    /**
     * @params: 
     *    - loc:   the location and identifier of the of var
     *    - spec:  the specialization operand 
     *    - kind:  the kind of of var (impl, of, over, etc.)
     */
    pub self (loc: &Word, kind: TemplateOfVarType, spec: &Expression)
        with super (loc)
        , kind = kind
        , spec = spec
    {}

    
    impl Streamable;
    impl Formattable {    
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.kind, ' ');
            stream:.entabing ();
            self.spec.format (alias stream);
            stream:.detabing ();
        }
    }
    
}
