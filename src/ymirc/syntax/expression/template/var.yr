in var;

use std::stream;

use ymirc::lexing::{word, keys};
use ymirc::utils::format;

/**
 * Template var, used in template test to check that the type is aliasable, a
 * class, a struct, etc.
 * 
 */
@final
pub class TemplateVarExpr over TemplateExpression {

    /*! Public fields */
    pub {
        // The kind of test to apply on the var
        let kind: TemplateVarType;
        
        // The type variable being tested
        let name: [c8];
    }
    
    /**
     * @params: 
     *   - loc: location and identifier of the template var
     *   - name: the type of variable
     */
    pub self (loc: &Word, name: [c8], kind: TemplateVarType)
        with super (loc)
        , name = name
        , kind = kind
    {}

        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.kind, ' ', self.name);
        }        
    }

}
