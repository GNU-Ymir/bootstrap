in compose;

use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::lambda;
mod ::list;
mod ::listmap;
mod ::mapfor;
mod ::slice;
mod ::slicefor;
mod ::try;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def LambdaExpr: lambda::LambdaExpr;
pub def ListExpr:   list::ListExpr;
pub def ListMapExpr: listmap::ListMapExpr;
pub def MapForAllocatorExpr: mapfor::MapForAllocatorExpr;
pub def SliceAllocatorExpr: slice::SliceAllocatorExpr;
pub def SliceForAllocatorExpr: slicefor::SliceForAllocatorExpr;
pub def TryExpr: try::TryExpr;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */


/**
 * Ancestor of all composition expression. A composition expression is an
 * expression producing a value from the composition of other values, e.g.
 * tuples, slices, maps, etc.
 *
 * Block, control flows, etc could be considered composed, but let's refer to
 * compose as expression that aims at producing native typed values of a
 * compound type.
 *
 * */
@abstract
pub class ComposeExpr over Expression {
    pub self (loc: &Word)
        with super (loc)
    {}
}
