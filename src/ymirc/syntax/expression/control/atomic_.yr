in atomic_;

use ymirc::syntax::expression::empty;

use std::stream;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of an atomic expression
 */
@final
pub class AtomicExpr over ControlExpr {

    /*! Public fields */
    pub {
        // The expression that is synchronized
        let monitor: &Expression;
        
        // The content value
        let value: &Expression;
    }

    /**
     * @params:   
     *   - loc:     the location of the atomic
     *   - monitor: the value used as a monitor (EmptyExpression if none)
     *   - value:   the value that must be accessed synchronisely
     */
    pub self (loc: &Word, monitor: &Expression, value: &Expression)
        with super (loc)
        , monitor = monitor
        , value = value
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::ATOMIC);
            stream:.entabing ();
            if self.monitor !of EmptyExpr {        
                stream:.write (' ', Tokens::LPAR);
                self.monitor.format (alias stream);
                stream:.write (Tokens::RPAR);                
            }
            stream:.write (' ', Tokens::LACC);
            self.value.format (alias stream);
            stream:.detabing ();
            stream:.write (Tokens::RETURN, Tokens::RACC);
        }
    }

}
