in await_;

use ymirc::syntax::expression::empty;

use std::stream;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of an await expression
 */
@final
pub class AwaitExpr over ControlExpr {

    /*! Public fields */
    pub {    
        // The value
        let value: &Expression;
    }

    /**
     * @params:   
     *   - loc:    the location of the await     
     *   - value:  the value of the await
     */
    pub self (loc: &Word, value: &Expression)
        with super (loc)
        , monitor = monitor
        , value = value
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::AWAIT);
            stream:.entabing ();                        
            self.value.format (alias stream);
            stream:.detabing ();            
        }
    }

}
