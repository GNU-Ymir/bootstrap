in instruction;

use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */


mod ::assert_;
mod ::break_;
mod ::panic_;
mod ::patterndecl;
mod ::return_;
mod ::throw_;
mod ::vardecl;
mod ::yield_;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def AssertExpr: assert_::AssertExpr;
pub def BreakExpr:  break_::BreakExpr;
pub def PanicExpr:  panic_::PanicExpr;
pub def PatternVarDeclExpr: patterndecl::PatternVarDeclExpr;
pub def ReturnExpr: return_::ReturnExpr;
pub def ThrowExpr:  throw_::ThrowExpr;
pub def VarDeclExpr: vardecl::VarDeclExpr;
pub def YieldExpr: yield_::YieldExpr;
/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * Ancestor of all instructions. An instruction is an expression that has no
 * sense within an operator tree, e.g. break, return, assert...
 *
 * */
@abstract
pub class InstructionExpr over Expression {
    pub self (loc: &Word)
        with super (loc)
    {}
}
