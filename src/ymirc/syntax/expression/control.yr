in control;

use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::atomic_;
mod ::await_;
mod ::conditional;
mod ::for_;
mod ::iflet;
mod ::lazy_;
mod ::match_;
mod ::spawn_;
mod ::unsafe_;
mod ::while_;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */


pub def AtomicExpr:         atomic_::AtomicExpr;
pub def AwaitExpr:          await_::AwaitExpr;
pub def ConditionalExpr:    conditional::ConditionalExpr;
pub def ConditionalLetExpr: iflet::ConditionalLetExpr;
pub def ForLoopExpr:        for_::ForLoopExpr;
pub def LazyExpr:           lazy_::LazyExpr;
pub def MatchLine:          match_::MatchLine;
pub def MatcherExpr:        match_::MatcherExpr;
pub def SpawnExpr:          spawn_::SpawnExpr;
pub def UnsafeExpr:         unsafe_::UnsafeExpr;
pub def WhileLoopExpr:      while_::WhileLoopExpr;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * Ancestor of all control flow expression.
 * 
 * */
@abstract
pub class ControlExpr over Expression {
    pub self (loc: &Word)
        with super (loc)
    {}
}

    
