in copy_;


use std::stream;
use ymirc::lexing::{word, keys};
use ymirc::utils::format;

/**
 * A copy expression applying a simple, or deep level copy of a value
 *
 *
 */
@final
pub class CopyExpr over MemoryExpr {

    // True iif the copy is deep
    pub let isDeep : bool;

    /**
     * @params:
     *    - loc:     the location of the copy operator
     *    - content: the value being copied
     *    - isDeep:  true iif the copy is deep
     * */
    pub self (loc: &Word, content: &Expression, isDeep: bool)
        with super (loc, content)
        , isDeep = isDeep
    {}
    
    impl Streamable;
    impl Formattable {

        pub over format (self, dmut stream : &Formatter) {
            if self.isDeep {
                stream:.write (Keys::DCOPY);
            }
            else stream:.write (Keys::COPY);
            
            stream:.write (' ');
            stream:.entabing ();
            self.content.format (alias stream);
            stream:.detabing ();
        }
        
    }
    
    
}
