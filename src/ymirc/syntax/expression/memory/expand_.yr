in expand_;


use std::stream;

use ymirc::lexing::{keys, word};
use ymirc::utils::format;

/**
 * A expand expression applying an expand of a value (basically a tuple or an array)
 *
 *
 */
@final
pub class ExpandExpr over MemoryExpr {
    
    /**
     * @params:
     *    - loc:     the location of the expand operator
     *    - content: the value being expanded     
     * */
    pub self (loc: &Word, content: &Expression)
        with super (loc, content)        
    {}
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream : &Formatter) {
            stream:.write (Keys::EXPAND)
                :.write (' ');
            
            stream:.entabing ();
            self.content.format (alias stream);
            stream:.detabing ();
        }        
    }
    
    
}
