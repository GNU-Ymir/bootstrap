in template;

use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::and;
mod ::ofvar;
mod ::var;
mod ::variadic;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def TemplateAndExpr:      and::TemplateAndExpr;
pub def TemplateOfVarExpr:    ofvar::TemplateOfVarExpr;
pub def TemplateVarExpr:      var::TemplateVarExpr;
pub def TemplateVariadicVarExpr: variadic::TemplateVariadicVarExpr;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * The ancestor of all kind of template expression.
 */
@abstract
pub class TemplateExpression over Expression {
    pub self (loc : &Word)
        with super (loc)
    {}
}
