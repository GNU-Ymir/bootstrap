in named;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * A named expression associate an Identifier to an expression, this is used in
 * call arguments, matchers, etc.
 * 
 */
@final
pub class NamedExpr over OperatorExpr {

    /*! Public fields */
    pub {
        // The name applied
        let name: &Word;
        
        // The content of the expression
        let value: &Expression;
    }
    
    /**
     * @params: 
     *    - loc:   the location and identifier of the named expression
     *    - name:  the name of the value to name
     *    - value: the value of the expression
     */
    pub self (loc: &Word, name: &Word, value: &Expression)
        with super (loc)
        , name = name
        , value = value
    {}

        
    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting of the expression inside the stream
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.name.str, ' ', Tokens::ARROW, ' ');
            stream:.entabing ();
            self.value.format (alias stream);
            stream:.detabing ();
        }        
    }

}
