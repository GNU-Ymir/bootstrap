in cast_;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic node representation of a cast expression
 *
 */
@final
pub class CastExpr over OperatorExpr {

    /*! Public fields */
    pub {
        // The type of the cast
        let type: &Expression;

        // The value that is casted
        let value: &Expression;
    }
    
    /**
     * @params: 
     *    - loc:   the location of the cast
     *    - type:  the type of the cast
     *    - value: the value of the cast
     */
    pub self (loc: &Word, type: &Expression, value: &Expression)
        with super (loc)
        , value = value
        , type = type
    {}
    
    impl Streamable;
    impl Formattable {    
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::CAST, " ", Tokens::NOT, Tokens::LACC);
            stream:.entabing ();
            self.type.format (alias stream);            
            stream:.write (Tokens::RACC, Tokens::LPAR);
            self.value.format (alias stream);
            stream:.write (Tokens::RPAR);
            stream:.detabing ();
        }        
    }
    
}
