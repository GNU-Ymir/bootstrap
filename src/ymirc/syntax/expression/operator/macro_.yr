in macro_;

use std::stream;

use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * Syntaxic representation of a macro call expression
 *
 */
@final
pub class MacroCallExpr over OperatorExpr {

    /*! Public fields */
    pub {
        // The macro that is called
        let who: &Expression;
        
        // The content of the call
        let content: [c8];
    }

    /**
     * @params:
     *    - loc: the location of the macro call
     *    - who: the macro being called
     *    - content: the content of the macro call
     */
    pub self (loc: &Word, who: &Expression, content: [c8])
        with super (loc)
        , who = who
        , content = content
    {}
        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            self.who.format (alias stream);
            stream:.write (Tokens::MACRO_ACC);

            stream:.entabing ();
            stream:.write (self.content);
            stream:.detabing ();
            
            stream:.write (Tokens::RACC);
        }
    }

}
