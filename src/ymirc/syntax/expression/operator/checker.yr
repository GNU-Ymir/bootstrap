in checker;

use std::stream;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Template checker are used to associate a bool value to a template specialization test
 *
 */
@final
pub class TemplateCheckerExpr over OperatorExpr {

    /*! Public fields */
    pub {
        // The list of template parameters to test
        let params: [&Expression];

        // The list of template deconstruction expressions
        let rules: [&Expression];
    }
        
    /**
     * @params: 
     *    - loc:    the location of the template checker
     *    - params: the list of template parameters (after the Not token)
     *    - rules:  the list of template rules (used to specialize the parameters)
     */
    pub self (loc: &Word, params: [&Expression], rules: [&Expression])
        with super (loc)
        , params = params
        , rules = rules
    {}

        
    impl Streamable;
    impl Formattable {    
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::IS, Tokens::NOT, Tokens::LACC);
            stream:.entabing ();            
            for i, elem in self.params {
                if (i != 0) stream:.write (", ");
                elem.format (alias stream);                
            }
            stream:.detabing ();
            stream:.write (Tokens::RACC, Tokens::LACC);
            stream:.entabing ();
            for i, elem in self.rules {
                if (i != 0) stream:.write (", ");
                elem.format (alias stream);                
            }            
            stream:.detabing ();
            stream:.write (Tokens::RACC);
        }
    }

}
