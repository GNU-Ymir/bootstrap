in pragma;

use std::stream;
use ymirc::lexing::keys;
use ymirc::lexing::{word, tokens};
use ymirc::utils::format;

/**
 * Syntaxic representation of a pragma expression
 *
 */
@final
pub class PragmaExpr over OperatorExpr {

    /*! Public fields */
    pub {
        // The name of the pragma to apply
        let name: &Word;
        
        // The content of the pragma
        let params: [&Expression];
    }
    
    /**
     * @params: 
     *    - loc:    the location of the pragma
     *    - name:   the name of the pragma to apply
     *    - params: the list of arguments passed to the pragma
     */
    pub self (loc: &Word, name: &Word, params: [&Expression])
        with super (loc)
        , name = name
        , params = params
    {}
        
    impl Streamable;
    impl Formattable {
    
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::PRAGMA, Tokens::NOT, self.name.str, Tokens::LPAR);
            stream:.entabing ();            
            for i, elem in self.params {
                if (i != 0) stream:.write (", ");
                elem.format (alias stream);                
            }
            stream:.detabing ();
            stream:.write (Tokens::RPAR);
        }
    }
    
}
