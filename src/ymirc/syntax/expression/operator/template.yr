in template;

use std::stream;
use ymirc::lexing::keys;
use ymirc::lexing::{word, tokens};
use ymirc::utils::format;


/**
 * Syntaxic representation of a template call
*
 */
@final
pub class TemplateCallExpr over OperatorExpr {

    /*! Public fields */
    pub {
        // The left operand of the call
        let left: &Expression;
        
        // The list of parameters of the call
        let rights: [&Expression];
    }

    /**
     * @params: 
     *   - loc:    the location of the template call
     *   - left:   the left operand of the call
     *   - params: the list of right operands of the call
     */
    pub self (loc: &Word, left: &Expression, rights: [&Expression])
        with super (loc)
        , left = left
        , rights = rights
    {}

        
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            self.left.format (alias stream);
            stream:.write (Tokens::NOT, Tokens::LACC);
            stream:.entabing ();            
            for i, elem in self.rights {
                if (i != 0) stream:.write (Tokens::COMA, " ");
                elem.format (alias stream);                
            }
            stream:.write (Tokens::RACC);
            stream:.detabing ();
        }
    }

}


