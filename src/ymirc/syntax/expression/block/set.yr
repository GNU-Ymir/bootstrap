in set;

use std::stream;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * A set is a list of expression, that doesn't enter a new scope, they are used
 * to declare multiple element on the same line, for example var declarations
 * The value of a set, is the value of the last expression
 *
 * 
 */
@final
pub class SetExpr over Expression {

    pub {
        // The content of the block
        let content: [&Expression];
    }

    /**
     * @params: 
     *   - loc: the location of the set
     *   - content: the list of expression contained in the set
     */
    pub self (loc: &Word, content: [&Expression])
        with super (loc)
        , content = content
    {}
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {            
            for i, elem in self.content {
                if (i != 0) stream:.write (Tokens::SEMI_COLON, '\n');
                elem.format (alias stream);                
            }            
        }        
    }

}
