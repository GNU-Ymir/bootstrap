in scopeguard;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * A scope guard, that guards the exit of a block.
 * 
 */
@final
pub class ScopeGuardExpr over Expression {

    /*! Public fields */
    pub {
        // The content of the guard
        let content: &Expression;

        // The type of scope guard
        let kind: ScopeGuardType;
    }

    /**
     * @params: 
     *    - loc:     the location of the scope guard
     *    - content: the content of the scope guard
     *    - kind:    the kind of scope guard
     */
    pub self (loc: &Word, content: &Expression, kind: ScopeGuardType)
        with super (loc)
        , content = content
        , kind = kind
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (self.kind, ' ');
            self.content.format (alias stream);
        }
    }

}
