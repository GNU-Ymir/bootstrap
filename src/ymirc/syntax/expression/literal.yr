in literal;

use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ===================================          SUBMODULES          ===================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::bool_;
mod ::char;
mod ::dollar;
mod ::fixed;
mod ::float;
mod ::none_;
mod ::null_;
mod ::string;
mod ::var;
mod ::version;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def BoolExpr:    bool_::BoolExpr;
pub def CharExpr:    char::CharExpr;
pub def DollarExpr:  dollar::DollarExpr;
pub def FixedExpr:   fixed::FixedExpr;
pub def FloatExpr:   float::FloatExpr;
pub def NoneExpr:    none_::NoneExpr;
pub def NullExpr:    null_::NullExpr;
pub def StringExpr:  string::StringExpr;
pub def VarExpr:     var::VarExpr;
pub def VersionExpr: version::VersionExpr;


/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * Ancestor of all literal
 */
@abstract
pub class LiteralExpr over Expression {
    pub self (loc: &Word)
        with super (loc)
    {}    
}
