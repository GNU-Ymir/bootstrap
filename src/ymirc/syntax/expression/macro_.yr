in macro_;


use ymirc::lexing::word;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::ident;
mod ::mult;
mod ::or;
mod ::token;
mod ::var;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def MacroIdentExpr: ident::MacroIdentExpr;
pub def MacroMultExpr:  mult::MacroMultExpr;
pub def MacroOrExpr:    or::MacroOrExpr;
pub def MacroTokenExpr: token::MacroTokenExpr;
pub def MacroVarExpr:   var::MacroVarExpr;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * Ancestor of all macro rule expressions
 */
@abstract
pub class MacroRuleExpression over Expression {
    pub self (loc : &Word)
        with super (loc)
    {}
}
