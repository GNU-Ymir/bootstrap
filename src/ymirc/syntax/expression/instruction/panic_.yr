in panic_;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

use ymirc::syntax::expression::empty;

/**
 * Syntaxic node representation of a panic expression
 *
 */
@final
pub class PanicExpr over InstructionExpr {

    /*! Public fields */
    pub {
        // The message to display on panic
        let msg: &Expression;
    }

    /**
     * @params :
     *    - loc: the location of the panic
     *    - msg: the message to display on panic
     */
    pub self (loc: &Word, msg: &Expression)
        with super (loc)
        , msg = msg
    {}


    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting of the panic
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::PANIC);
            if self.msg !of EmptyExpr {
                stream:.write (' ', self.msg);
            }            
        }
    }

}
