in yield_;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

use ymirc::syntax::expression::empty;

/**
 * Syntaxic node representation of a yield expression
 *
 */
@final
pub class YieldExpr over InstructionExpr {

    /*! Public fields */
    pub {
        // The value that is yielded
        let value: &Expression;
    }

    /**
     * @params: 
     *    - loc: the location of the yield
     *    - value: the value of the yield
     */
    pub self (loc: &Word, value: &Expression)
        with super (loc)
        , value = value
    {}

        
    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting of the yield
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::YIELD);            
            if self.value !of EmptyExpr {
                stream:.entabing ();
                stream:.write (' ', self.value);
                stream:.detabing ();    
            }            
        }        
    }
    
}
