in break_;

use std::stream;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic node representation of a break expression.
 * 
 */
@final
pub class BreakExpr over InstructionExpr {

    pub {
        // The value of the break expression
        let value: &Expression;
    }

    /**
     * @params: 
     *    - loc: the location of the break
     *    - value: the value of the break
     */
    pub self (loc: &Word, value: &Expression)
        with super (loc)
        , value = value
    {}
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::BREAK, ' ');            
            self.value.format (alias stream);            
        }        
    }
    
}
