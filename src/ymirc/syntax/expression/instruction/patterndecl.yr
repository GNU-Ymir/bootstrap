in patterndecl;

use std::stream;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

/**
 * Syntaxic representation of a pattern variable declaration
 * 
 */
@final
pub class PatternVarDeclExpr over InstructionExpr {

    /*! Public fields */
    pub {
        // The pattern expression
        let pattern: &Expression;

        // The value that is patternuctured
        let value: &Expression;
    }

    /**
     * @params:
     *    - loc: the location of the declaration
     *    - pattern: the pattern filter declaring variables
     *    - value: the value to pass through the filter     
     */
    pub self (loc: &Word, pattern: &Expression, value: &Expression)
        with super (loc)
        , pattern = pattern
        , value = value
    {}


    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting of the patternucturation inside the stream
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::LET, ' ');
            self.pattern.format (alias stream);
            stream:.entabing ();
            stream:.write (Tokens::EQUAL, ' ');
            self.value.format (alias stream);
            stream:.detabing ();
        }
    }

}
