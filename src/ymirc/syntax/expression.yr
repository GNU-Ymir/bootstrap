in expression;

use ymirc::lexing::word;
use ymirc::utils::format;

use std::{io, stream};

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub mod ::block;
pub mod ::compose;
pub mod ::control;
pub mod ::empty;
pub mod ::instruction;
pub mod ::literal;
pub mod ::macro_;
pub mod ::match_;
pub mod ::memory;
pub mod ::operator;
pub mod ::template;
pub mod ::type;


/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          ANCESTOR          ====================================
 * ====================================================================================================
 * ====================================================================================================
 */

/**
 * Ancestor class of all expressions
 */
@abstract
pub class Expression {

    // The location of the expression
    pub let loc: &Word;
    
    /**
     * @params:
     *   - loc: the location of the expression     
     */
    pub self (loc : &Word)
        with loc = loc
    {}
    
    impl Streamable;
    impl Formattable;
    
}
