in errors;

/**
 * Errors that can happen within a syntax visit.
 * */

pub enum 
| BLOCK_NEVER_CLOSED          = "block is never closed"
| IF_NON_TEMPLATE             = "cannot test a non-template declaration"
| IN_DECL_BLOCK               = "invalid syntax inside a declaration block"
| IN_TEMPLATE_PARAMS          = "invalid syntax in template parameters"
| MISSING_TEMPLATE_ACC        = "ambiguous template application: multiple top-level '!' markers (e.g., A!B!C). Use braces to disambiguate (A!{B!C})"
| MULTIPLE_AUX_CSTRS          = "multiple constructor redirects are not permitted"
| UNDEFINED_ATTRIBUTE         = "undefined attribute %(y)"
| UNEXPECTED                  = "unexpected %(y)"
| UNEXPECTED_ATTRIBUTES       = "unexpected attribute list %(y)"
| UNEXPECTED_BUT_LST          = "read %(y), but expected %(y)"
| UNTERMINATED_BLOCK          = "unterminated block"
| USED_AS_IDENTIFIER          = "%(y) cannot be used as an identifier"
| READING_PATTERN_DECLARATION = "failed to read pattern variable declaration"
| MULTIPLE_SAME_GUARD         = "scope guard %(y) is declared multiple times"
| CONFLICTING_DECORATORS      = "decorators %(y) and %(y) cannot be applied together"
| UNDEF_DECORATOR_IN_MATCH    = "decorator %(y) cannot be applied to a subpattern variable"
| MULTIPLE_ATTRS              = "decorator %(y) is defined multiple times"
| READING_LOCAL_DECLARATION   = "failed to read local symbol declaration"
| DTOR_IN_STRUCT_UNION        = "struct or union cannot define a destructor; use an entity instead"
 -> SyntaxErrorMessage; 
