in custom;

use ymirc::lexing::keys;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::enum_;
mod ::impl_;
mod ::trait_;
mod ::type;


/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def EnumDecl: enum_::EnumDecl;
pub def ImplDecl: impl_::ImplDecl;
pub def TraitDecl: trait_::TraitDecl;
pub def TypeDecl: type::TypeDecl;

/**
 * The kind of type declared by a TypeDecl
 * */
pub enum
| UNION  = Keys::UNION
| ENTITY = Keys::ENTITY
| RECORD = Keys::RECORD
| CLASS  = Keys::CLASS
 -> TypeDeclKind; 
