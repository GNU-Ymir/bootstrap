in cond;

use ymirc::syntax::expression;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;
use std::stream;

/**
 * A conditionnal block of declaration, i.e. a list of declaration conditioned
 * by a test expression.
 *
 */
@final
pub class CondBlockDecl over Declaration {

    pub {
        // The list of declaration inside the block
        let decls: [&Declaration];

        // The test to run before declaring the list of declarations
        let test: &Expression;

        // The declaration to use in case if the test does not pass
        let else_: &Declaration;
    }
    
    /**
     * @params: 
     *   - loc:   the location of the block 
     *   - comm:  the comments above the block
     *   - decls: the list of declaration inside the block
     *   - test:  the test to check before declaring the list of decls
     *   - else_: the block of declaration to declare if the test fails
     */
    pub self (loc: &Word,
              comm: [c8],
              decls: [&Declaration],
              test: &Expression,
              else_: &Declaration = EMPTY_BLOCK_DECL)
        
        with super (loc, comm)
        , decls = decls
        , test = test
        , else_ = else_
    {}
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::CTE, " ", Keys::IF, ' ');
            stream:.entabing ();
            self.test.format (alias stream);
            stream:.detabing ();

            stream:.entabing ();
            stream:.write (Tokens::LACC, Tokens::RETURN);            
            for i in self.decls {
                i.format (alias stream);
            }
            stream:.detabing ();
            stream:.write (Tokens::RACC, Tokens::RETURN, Keys::ELSE);
            
            stream:.entabing ();
            stream:.write (Tokens::LACC, Tokens::RETURN);            
            self.else_.format (alias stream);
            stream:.detabing ();
            stream:.write (Tokens::RACC, Tokens::RETURN);            
        }
        
    }    

}
