in extern_;

use ymirc::syntax::expression;

use ymirc::lexing::keys;
use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;

use std::stream;

/**
 * An external block declaration.
 * 
 */
@final
pub class ExternBlockDecl over Declaration {

    pub {
        // The location of the language of the extern
        let lang: &Word;
        
        // The list of declaration in the block
        let decls: [&Declaration];
    }

    /**
     * @params: 
     *   - loc:   the location of the extern
     *   - comms: the comments about the extern
     *   - space: the namespace of the external declaration
     *   - decls: the list of declaration in the block 
     */
    pub self (loc: &Word, comms: [c8], lang: &Word, decls: [&Declaration])
        with super (loc, comms)
        , lang = lang
        , decls = decls        
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::EXTERN)
                :.write (Tokens::LPAR)
                :.write (self.lang.str)            
                :.write (Tokens::RPAR, " ", Tokens::LACC, Tokens::RETURN);
            
            stream:.entabing ();
            for d in self.decls {
                d.format (alias stream);                
            }            
            stream:.detabing ();
            
            stream:.write (Tokens::RACC, Tokens::RETURN);
        }        
    }
    
}
