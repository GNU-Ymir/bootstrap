in use_;

use ymirc::syntax::expression;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;
use std::stream;

/**
 * Syntaxic representation of an importation
 *
 */
@final
pub class UseDecl over Declaration {

    pub {
        // The path of the module to use
        let path: &Expression;

        // True if this is a root use ('::' leading the path)
        let isRoot: bool = false;
    }

    /**
     * @params:
     *    - loc: the location of the importation
     *    - comm: the comments about the importation
     *    - path: the path of the module to import
     *    - isRoot: true iif '::' is leading the path being used
     */
    pub self (loc: &Word, com: [c8], path: &Expression, isRoot: bool)
        with super (loc, com)
        , path = path
        , isRoot = isRoot
    {}

    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::USE, ' ');
            if (self.isRoot)
                stream:.write (Tokens::DCOLON);

            self.path.format (alias stream);
            stream:.write (Tokens::SEMI_COLON, Tokens::RETURN);
        }

    }

}
