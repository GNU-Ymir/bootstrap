in assert_;

use std::stream;
use ymirc::lexing::{word, keys, tokens};
use ymirc::syntax::expression::empty;

use ymirc::utils::format;

/**
 * Syntaxic node representation of an assertion at a module level (cte assert)
 * 
 */
@final
pub class AssertDecl over Declaration {

    pub {
        // The test of the assertion
        let test: &Expression;

        // The message of the assertion
        let msg: &Expression;
    }
    
    /**
     * @params: 
     *    - loc: the location of the assert
     *    - comm: the comment above the assert declaration
     *    - test: the test of the assertion
     *    - msg: the message to display, if the test failed
     */
    pub self (loc: &Word, comm: [c8], test: &Expression, msg: &Expression)
        with super (loc, comm)
        , test = test
        , msg = msg
    {}
            
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::CTE, ' ', Keys::ASSERT, ' ', Tokens::LPAR);
            stream:.entabing ();
            self.test.format (alias stream);
            if self.msg !of EmptyExpr {        
                stream:.write (", ");
                self.msg.format (alias stream);                
            }            
            stream:.detabing ();
            stream:.write (Tokens::RPAR);
        }        
    }
    
}
