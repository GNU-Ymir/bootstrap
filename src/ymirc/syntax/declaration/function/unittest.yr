in unittest;

use ymirc::syntax::expression;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;
use std::stream;

/**
 * Syntax node encoding a unittest
 *
 */
@final
pub class UnitTestDecl over Declaration {

    // The content of the test
    pub let body: &Expression;

    /**
     * @params: 
     *   - loc:  the location of the test
     *   - comm: the comments above the test
     *   - body: the body of the test
     */
    pub self (loc: &Word, comm: [c8], body: &Expression)
        with super (loc, comm)
        , body = body
    {}
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::UNITTEST, ' ');
            self.body.format (alias stream);
        }        
    }    
    
}
