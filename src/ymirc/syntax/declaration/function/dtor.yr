in dtor;

use ymirc::syntax::{expression, expression::{instruction, empty}};

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;
use std::stream;

/**
 * Syntaxic node representation of a destructor
 *
 */
@final
pub class DtorDecl over FunctionDecl {

    /**
     * params:
     *    - loc:   the location of the dtor
     *    - comm:  the comment above the dtor
     *    - param: the self parameter
     *    - body:  the body of the dtor
     *    
     * */
    pub self (loc: &Word, comm: [c8], param: &VarDeclExpr, body: &Expression)
        with super (loc,
                    comm,
                    name-> EOF_WORD,
                    proto-> FunctionPrototype (copy [param],
                                               retType-> EMPTY_EXPR,
                                               isVariadic-> false),                    
                    body-> body,
                    attrs-> [],
                    throwers-> [],
                    throwerLoc-> EOF_WORD,
                    isOver-> false)
    {}

    /**
     * params:
     *    - loc:   the location of the dtor
     *    - comm:  the comment above the dtor
     *    - proto: the prototype of the dtor (assuming it contains only the self variable and return EmptyExpr)
     *    - body:  the body of the dtor
     *    
     * */
    pub self (loc: &Word, comm: [c8], proto: FunctionPrototype, body: &Expression)
        with super (loc,
                    comm,
                    name-> EOF_WORD,
                    proto-> proto,
                    body-> body,
                    attrs-> [],
                    throwers-> [],
                    throwerLoc-> EOF_WORD,
                    isOver-> false)

    {}
    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::DTOR);
            self.proto.format (alias stream);
            stream:.write (Tokens::RETURN);
            self.body.format (alias stream);
            stream:.write (Tokens::RETURN);            
        }        
    }
    
}
