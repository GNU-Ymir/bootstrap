in proto;

use ymirc::syntax::{expression, expression::{instruction, empty}};

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;
use std::stream;

/**
 * A prototype is a list of parameters, and return type
 *
 */
pub record FunctionPrototype {

    pub {
        // The list of parameters of the prototype
        let params: [&VarDeclExpr];

        // The return type of the prototype
        let retType: &Expression;

        // Is this a variadic prototype (C-style)
        let isVariadic: bool;
    }
    
    /**
     * @params:      
     *    - params:     the list of parameters of the prototype         
     *    - retType:    the return type of the prototype
     *    - isVariadic: for extern (C) functions, when they are variadic (such as printf)     
     */
    pub self (params: [&VarDeclExpr], retType: &Expression, isVariadic: bool)
        with params = params
        , retType = retType
        , isVariadic = isVariadic
    {}

    
    impl Streamable;
    impl Formattable {

        /**
         * Pretty formatting of the prototype inside the stream
         */
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Tokens::LPAR);                        
            stream:.entabing ();            
            for i, e in self.params {
                if (i != 0) stream:.write (Tokens::COMA, " ");
                e.format (alias stream);                
            }
            
            if (self.isVariadic) {
                if (self.params.len != 0) stream:.write (Tokens::COMA);
                stream:.write (Tokens::TDOT);
            }

            stream:.write (Tokens::RPAR);
            if self.retType !of EmptyExpr {
                stream:.write (Tokens::ARROW, " ");
                self.retType.format (alias stream);                
            }

            stream:.write (" ");
            stream:.detabing ();
        }
        
    }
    
}
