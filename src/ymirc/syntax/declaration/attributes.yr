in attributes;

use ymirc::lexing::{word, keys};

pub record AttributeWord {

    // The location of the attribute
    pub let loc: &Word;

    // The given attribute activated
    pub let attr: Attributes;

    /**
     * @params:
     *    - loc:  the location of the Attribute definition
     *    - attr: the attribute activated
     * */
    pub self (loc: &Word, attr: Attributes)
        with loc = loc
        , attr = attr
    {}

    /**
     * @returns: true iif `o.attr` == `self.attr`
     * */
    pub fn opEquals (self, o: AttributeWord)-> bool {
        self.attr == o.attr
    }
}
