in block;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * ====================================          SUBMODS          =====================================
 * ====================================================================================================
 * ====================================================================================================
 */

mod ::cond;
mod ::extern_;
mod ::list;

/*!
 * ====================================================================================================
 * ====================================================================================================
 * =====================================          TYPES          ======================================
 * ====================================================================================================
 * ====================================================================================================
 */

pub def CondBlockDecl: cond::CondBlockDecl;
pub def BlockDecl: list::BlockDecl;
pub def Externblock: extern_::ExternBlockDecl;

/**
 * A lazy value to define an empty block declaration as a placeholder for empty
 * leafs conditional blocks.
 * 
 * */
pub lazy EMPTY_BLOCK_DECL = copy BlockDecl::empty ();

/**
 * The protection of the declarations
 */
pub enum 
| PRIVATE   = 0
| PROTECTED = 1
| PUBLIC    = 2
 -> Protection;
