in union_;

use ymirc::syntax::expression;
use ymirc::syntax::expression::{instruction, empty};

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;
use std::stream;

/**
 * Syntaxic node representation of an union declaration
 *
 */
@final
pub class  UnionDecl over Declaration {

    pub {
        // The name of the union to declare
        let name: &Word;
        
        // The list of types inside the enum
        let types: [&Expression];        

        // The list of comments of the types
        let typeComms: [[c8]];
    }
    
    /**
     * @params: 
     *    - loc:        the location of the union
     *    - comm:       the comments about the union
     *    - name:       the name of the union to declare
     *    - types:      the list of types in the union
     *    - typeComms:  the list of comments about the different types     
     */
    pub self (loc:       &Word,
              comm:      [c8],
              name:      &Word,              
              types:     [&Expression],
              typeComms: [[c8]])
        
        with super (loc, comm)
        , name = name        
        , types = types
        , typeComms = typeComms
    {}

    
    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::UNION, " ", self.name.str);
                        
            stream:.write (Tokens::RETURN);
            
            for i in self.fields {
                stream:.write (Tokens::PIPE, ' ');
                stream:.entabing ();
                i.format (alias stream);
                stream:.detabing ();
                stream:.write (Tokens::RETURN);
            }
            
            stream:.write (Tokens::SEMI_COLON, Tokens::RETURN);
        }

        
    }
    
}

