in base;

use ymirc::syntax::expression;

use ymirc::lexing::{word, tokens, keys};
use ymirc::utils::format;
use std::stream;

/**
 * Macro declaration, with a set of rules and other inner declarations.
 * 
 */
@final
pub class MacroDecl over Declaration {
    
    pub {
        // The name of the macro 
        let name: [c8];
        
        // The list of declarations inside the macro
        let decls: [&Declaration];
    }

    /**
     * @params: 
     *   - loc: the location of the macro
     *   - com: the comments about the macro
     *   - decls: the list of declarations inside the macro
     */
    pub self (loc: &Word, comm: [c8], name: [c8], decls: [&Declaration])
        with super (loc, comm)
        , name = name
        , decls = decls
    {}    
    
    impl Streamable;
    impl Formattable {

        pub over format (self, dmut stream: &Formatter) {
            stream:.write (Keys::MACRO, ' 'c8, self.name, " ", Tokens::LACC, Tokens::RETURN);
            stream:.entabing ();
            for i in self.decls {
                i.format (alias stream);
            }
            stream:.detabing ();
            stream:.write (Tokens::RETURN, Tokens::RACC);
        }
        
    }
    
}
