    /**
     * @returns: the next token inside the lexer, if it is equals to one of the token inside lst
     * @info: if none of lst token is found, the lexer is not incremented
     * @params:
     *    - lst: a list of tokens
     */
    pub fn readIf {R...} (mut self, f : [c8], l : R)-> (&Word, [c8]) {                
        let (x, _) = self._lex.nextNoConsume ();        
        if (x.isEof ()) return (EOF_WORD, "");

        let tokens = [f, expand (cte if (R,)::arity == 1 { (l,) } else { l })];
        for i in tokens if i == x.str {
            return self._lex:.next ();
        }
        
        return (EOF_WORD, "");
    }

    /**
     * Read a succession of tokens, trying to make them match with the list passed in params
     * @returns:
     *    - .0: true iif the reading succeeded
     *    - .1: the list of word read
     *    - .2: the comments (of each tokens)
     * */
    pub fn readIfLst {R...} (mut self, f : [c8], l : R)-> (bool, [&Word], [[c8]]) {
        let tokens = [f, expand (cte if (R,)::arity == 1 { (l,) } else { l })];        
        let seek = self._lex.getSeek ();
        let mut res : [&Word] = [];
        let mut com : [[c8]] = [];
            
        for tok in tokens {
            let (x, c) = self._lex.nextNoConsume ();
            if x.isEof () {
                self._lex:.rewindToSeek (cursor-> seek);
                return (false, [], []);
            }
            
            if x.str != tok {
                self._lex:.rewindToSeek (cursor-> seek);
                return (false, [], []);
            }

            res ~= [x];
            com ~= [c];
            
            // consume the next token 
            self._lex:.next ();                            
        }
        
        return (true, res, com)
    }

    
    /**
     * @returns: the next token inside the lexer, if it is equals to one of the token inside lst
     * @info: if none of lst token is found, the lexer is not incremented
     * @params:
     *    - lst: a list of tokens
     */
    pub fn readIf (mut self, lst : [[c8]])-> (&Word, [c8]) {
        let (x, _) = self._lex.nextNoConsume ();
        if (x.isEof ()) return (EOF_WORD, "");

        for i in lst {
            if i == x.str {
                return self._lex:.next ();
            }
        }

        return (EOF_WORD, "");
    }

    /**
     * @returns: the next token inside the lexer, if it is equals to one of the token inside lst
     * @info: if none of lst token is found, the lexer is not incremented
     * @params:
     *    - lst: a list of tokens
     */
    pub fn readDirectIf (mut self, lst : [[c8]])-> &Word {
        let x = self._lex:.directNext ();
        if (x.isEof ()) return EOF_WORD;

        for i in lst {
            if i == x.str {
                return x;
            }
        }

        self._lex:.rewind ();
        EOF_WORD
    }


    /**
     * @returns: the next token inside the lexer, if it is equals to one of the token inside lst
     * @info: if none of lst token is found, the lexer is not incremented
     * @params:
     *    - lst: a token
     */
    pub fn readIf (mut self, lst : [c8])-> (&Word, [c8]) {
        let (x, _) = self._lex.nextNoConsume ();
        if (x.str == lst) return self._lex:.next ();

        return (EOF_WORD, "");
    }

    /**
     * @returns: the direct next token inside the lexer, if it is equals to one of the token inside lst
     * @info: if none of lst token is found, the lexer is not incremented
     * @params:
     *    - lst: a token
     */
    pub fn readDirectIf (mut self, lst : [c8])-> &Word {
        let x = self._lex:.directNext ();
        if (x.isEof ()) return EOF_WORD;

        if (x.str == lst) return x;

        self._lex:.rewind ();
        EOF_WORD
    }

    /**
     * @returns: the next token inside the lexer, if it is equals to one of the token inside lst
     * @throws:
     *   - ErrorMsg: if none of the token in lst is equal to the token that have been read, or the next token is eof
     * @params:
     *    - lst: a list of tokens
     */
    pub fn readTokens {R...} (mut self, f : [c8], l : R)-> (&Word, [c8])
        throws ErrorMsg
    {
        let tokens = [f, expand (cte if (R,)::arity == 1 { (l,) } else { l })];        
        let (x, y) = self._lex:.next ();
        for j in tokens if x.str == j {
            return (x, y);            
        }
        
        throw copy ErrorMsg::fatal (x, format (SyntaxErrorMessage::UNEXPECTED_BUT_LST, x.str, copy tokens));        
    }

