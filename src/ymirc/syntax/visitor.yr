    /**
     * @returns: the next token inside the lexer
     * */
    pub fn rewind (mut self) {
        self._lex:.rewind ()
    }

    /**
     * Rewind to the cursor of a word, right before the word
     * thus self:.readToken () might return the word after that if this is a token
     * */
    pub fn rewindToSeek (mut self, loc : &Word) {
        self._lex:.rewindToSeek (cursor-> loc.seek)
    }

    /**
     * Register the location of the lexer to rewind to that location later if the reading failed
     * @example:
     * ```
     * context:.registerTry (); // Store a recoverable state
     * {    
     *     self:.readTokens (Tokens::NOT);
     *     self:.readTokens (Tokens::LACC);
     *     self:.forgetTry (); // all succeeded, no need to keep it
     * } catch {
     *     _ => {
     *        // '!' may be read, or not, but it's not important, we got back to the start as if the block was never executed
     *        context:.recover (); 
     *     }
     * }
     * ```
     * */
    pub fn registerTry (mut self) {
        self._recoveringStates:.push (self._lex.getSeek ());
    }

    /**
     * Forget the last registered try
     * */
    pub fn forgetTry (mut self) {
        self._recoveringStates:.pop ();
    }
    
    /**
     * Recover the last registered try (and forget it)
     * */
    pub fn recover (mut self) {
        let s = self._recoveringStates.back ();
        self._lex:.rewindToSeek (s);
        self._recoveringStates:.pop ();
    }


    /*!
     * ====================================================================================================
     * ====================================================================================================
     * ===============================          COMPLEX BRANCHING          ================================
     * ====================================================================================================
     * ====================================================================================================
     */

    
    pub fn readEither {T, Z over T, FN...} (mut self, f : dg (dmut &SyntaxVisitor)-> (Z)?, l : FN)-> T
        throws ErrorMsg
    {        
        let mut errors : [&ErrorMsg] = [];
        if let Ok (v) = self:.tryFunc!{T} (f, ref errors) {
            return v;
        }

        cte if (FN,)::arity > 1 {
            cte for i in l {
                if let Ok (v) = self:.tryFunc!{T} (i, ref errors) {
                    return v;
                }            
            }
        } else {
            if let Ok (v) = self:.tryFunc!{T} (l, ref errors) {
                return v;
            }            
        }

        if errors.len != 0 {
            throw copy ErrorMsg::list (errors);
        }

        let (n, _) = self._lex.nextNoConsume ();
        throw copy ErrorMsg::fatal (n, format (SyntaxErrorMessage::UNEXPECTED, n));         
    }


    fn tryFunc {T, Z} (mut self, f : dg (dmut &SyntaxVisitor)-> (Z)?, ref mut errors : [&ErrorMsg])-> (T)? {
        self:.registerTry ();
        let value = f (alias self);
        
        if let Ok (z) = value {
            self:.forgetTry ();
            return (z)?
        }

        self:.recover ();
        if let Err (e : &ErrorMsg) = value {
            errors ~= [e];
        }

        none
    }
    
