in slice;

/**
 * A tokenize slice of a source file
 * */
pub record Slice {
    pub let mut tok: [c8] = "";

    pub let mut isSkip:    bool = false;
    pub let mut isComment: bool = false;
    pub let mut isString:  bool = false;
    pub let mut isKeyword: bool = false;
    pub let mut isToken:   bool = false;
    
    pub self () {}

    /**
     * @returns: true if the slice is not skip, comment, string or token (so either keyword or anything else)     
     * */
    @field
    pub fn isWord (self)-> bool {
        return !(self.isSkip || self.isString || self.isToken || self.isComment);
    }
}
