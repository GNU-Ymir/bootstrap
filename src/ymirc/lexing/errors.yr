in errors;

/**
 * Error messages that can be raised during the lexing step.
 */
pub enum
| UNTERMINATED_STRING              = "unterminated string literal %(y)"
| UNTERMINATED_COMMENT             = "unterminated comment block %(y)"
| RETURN_IN_SINGLE_LINE_COMMENT    = "line break encountered inside a single-line comment"
| RETURN_IN_SINGLE_LINE_STRING     = "line break encountered inside a single-line string literal"
| ESCAPE_RETURN_PROHIBITED_STRING  = "escaping a line break is prohibited; use a multiline string instead @(y=\"\"\")"
| ESCAPE_RETURN_PROHIBITED_COMMENT = "escaping a line break is prohibited; use a multiline comment instead @(y=/**/)"
| ESCAPE_AT_END_OF_STRING          = "escape character found at end of string literal"
| ESCAPE_AT_END_OF_COMMENT         = "escape character found at end of comment block"
| INVALID_HEX_NUMBER               = "invalid numeric value formatted in hexadecimal"
| INVALID_DEC_NUMBER               = "invalid numeric value formatted in decimal"
| INVALID_BIN_NUMBER               = "invalid numeric value formatted in binary"
| INVALID_OCT_NUMBER               = "invalid numeric value formatted in octal"
| MISSING_HEX_FLOAT_SIGN           = "expected sign information in hexadecimal floating-point literal"
| MISSING_SCI_FLOAT_SIGN           = "expected sign information in scientific floating-point literal"
| INVALID_IDENTIFIER               = "%(y) is not a valid identifier; use backquotes for special identifiers (e.g. `%(y)`)"
| EMPTY_BIN_NUMBER                 = "binary number is empty"
| EMPTY_OCT_NUMBER                 = "octal number is empty"
| EMPTY_HEX_NUMBER                 = "hexadecimal number is empty"
| EMPTY_EXP_FLOAT_NUMBER           = "the exponent part of the floating-point number is empty"
| EMPTY_DEC_FLOAT_NUMBER           = "the fractional part of the floating-point number is empty"
| MISSING_P_IN_HEX_FLOAT           = "missing the exponant part in floating-point number formatted in hexadecimal"
| UNTERMINATED_VERSION_BLOCK       = "unterminated version block: missing @(y=#end)"
| UNMATCHED_VERSION_END            = "@(y=#)%(y) without matching @(y=#if)"
| MISSING_VERSION_CONDITION        = "missing version condition: expected identifier or backquoted identifier"
| UNDEFINED_VERSION_DIRECTIVE      = "undefined version directive; expecting @(y=if), @(y=else) or @(y=end)"
 -> LexingErrorMessage;
