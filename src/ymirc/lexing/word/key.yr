in key;

use std::{stream, io};
use ymirc::utils::colors;


/**
 * A KeyWord models a lexical key extracted form a source file 
 * 
 * */
@final
pub class KeyWord over Word {

    /*!
     * ====================================================================================================
     * ====================================================================================================
     * =====================================          CTORS          ======================================
     * ====================================================================================================
     * ====================================================================================================
     */

    /**
     * Create a word from a file containing a key
     * @params: 
     *   - str:      the content of the word
     *   - filename: the name of the file that contains the word
     *   - line:     the location line of the word
     *   - col:      the location column of the word
     *   - seek:     the location cursor of the word (number of c8 preceding it)
     *   - lineSeek: the location cursor of the beginning of the line containing the word     
     * */
    pub self (str:         [c8],
              filename:    [c8],
              fileContent: [c8],
              line:        u64,
              col:         u64,
              seek:        usize,
              lineSeek:    usize)
        with super (str, filename, fileContent, line, col, seek, lineSeek)
    {}
        
    /*!
     * ====================================================================================================
     * ====================================================================================================
     * ===================================          COMPARISON          ===================================
     * ====================================================================================================
     * ====================================================================================================
     */

    /**         
     * @returns: true iif `o` is a keyword and contain the same content     
     * */
    pub over opEquals (self, o : &Word)-> bool {        
        if let k: &KeyWord = o {
            return self.str == k.str;
        }

        return false;
    }

    /*!
     * ====================================================================================================
     * ====================================================================================================
     * =================================          MISCELLANEOUS          ==================================
     * ====================================================================================================
     * ====================================================================================================
     */
    
    impl Hashable;        
    impl Streamable {
        pub over toStream (self, dmut stream: &StringStream)-> void {
            stream:.write (Colors::RED)                
                :.write (self.str)
                :.write (Colors::RESET, Colors::BOLD)
                :.write (" --> ")
                :.write (self.filename)
                :.write (":(")
                :.write (self.line)
                :.write (",")
                :.write (self.col)
                :.write (")")
                :.write (Colors::RESET);                                            
        }
    }
    
}
