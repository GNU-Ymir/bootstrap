in float;

use std::{stream, io};
use ymirc::utils::colors;

pub enum
| DEC = 1
| SCI = 2
| HEX = 3
 -> FloatNotation; 


/**
 * A FloatWord models a lexical float value extracted from a file.
 *
 * It contains information about the used notation, and suffix at the end of the
 * token, and exponent part for sci and hex notations.
 * 
 * */
@final
pub class FloatWord over Word {

    /*! Public fields */
    pub {
        // The encoding used
        let notation : FloatNotation;

        // The suffix at the end of the float word
        let suffix : &Word;

        // The exponent part
        let exp : [c8];
    }
    
    /*!
     * ====================================================================================================
     * ====================================================================================================
     * =====================================          CTORS          ======================================
     * ====================================================================================================
     * ====================================================================================================
     */

    /**
     * Create a word from a file containing a token
     * 
     * @params: 
     *   - str:      the content of the word
     *   - filename: the name of the file that contains the word
     *   - notation: the kind of notation used to encode the float constant
     *   - suffix:   the suffix placed at the end of the constant
     *   - exp:      the exponent part (for sci or hex notation)
     *   - line:     the location line of the word
     *   - col:      the location column of the word
     *   - seek:     the location cursor of the word (number of c8 preceding it)
     *   - lineSeek: the location cursor of the beginning of the line containing the word     
     * */
    pub self (str:         [c8],
              suffix:      &Word,
              exp:         [c8] = "",
              notation:    FloatNotation,
              filename:    [c8],
              fileContent: [c8],
              line:        u64,
              col:         u64,
              seek:        usize,
              lineSeek:    usize)
        with super (str, filename, fileContent, line, col, seek, lineSeek)
        , suffix = suffix
        , exp = exp
        , notation = notation
    {}
        
    /*!
     * ====================================================================================================
     * ====================================================================================================
     * ===================================          COMPARISON          ===================================
     * ====================================================================================================
     * ====================================================================================================
     */

    /**         
     * @returns: true iif `o` is a float word and contain the same content,
     *           notation and suffix
     * */
    pub over opEquals (self, o : &Word)-> bool {        
        if let n: &FloatWord = o {    
            if self.str != n.str return false;
            if self.notation != n.notation return false;
            if self.exp != n.exp return false;
            if self.suffix != n.suffix return false;
        }

        return false;
    }

    /*!
     * ====================================================================================================
     * ====================================================================================================
     * =================================          MISCELLANEOUS          ==================================
     * ====================================================================================================
     * ====================================================================================================
     */
    
    impl Hashable;        
    impl Streamable {
        pub over toStream (self, dmut stream: &StringStream)-> void {
            stream:.write (Colors::BOLD)
                :.write ("f|")
                :.write (self.str)                    
                :.write ("| --> ")
                :.write (self.filename)
                :.write (":(")
                :.write (self.line)
                :.write (",")
                :.write (self.col)
                :.write (",")
                :.write (self.notation)
                :.write (",")
                :.write (self.exp)
                :.write (",")
                :.write (self.suffix)
                :.write (")")
                :.write (Colors::RESET);                                            
        }
    }
    
}
