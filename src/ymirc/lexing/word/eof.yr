in eof;

use std::{stream, io};
use ymirc::utils::colors;


/**
 * A EofWord represents the End of File word.
 *
 * It can contain a real location (parent class with real content) or empty
 * location. It's `.str` or `.fileContent` are always empty.
 * */
@final
pub class EofWord over Word {

    /*!
     * ====================================================================================================
     * ====================================================================================================
     * =====================================          CTORS          ======================================
     * ====================================================================================================
     * ====================================================================================================
     */

    /**
     * Create a word containing a eof word. 
     *    
     * @params:    
     *  - filename: the name of the file that contains the word          
     *  - line:     the line of the eof
     *  - col:      the column of the eof
     * */
    pub self (filename: [c8]  = "",              
              line:     u64   = 0,
              col:      u64   = 0)            
        with super ("", filename, "", line, col, 0, 0)         
    {}
    
    /*!
     * ====================================================================================================
     * ====================================================================================================
     * ===================================          COMPARISON          ===================================
     * ====================================================================================================
     * ====================================================================================================
     */

    /**
     * @returns: false
     *
     * @info
     *    Eof token are not comparable to string values as it is always empty
     * */
    pub over opEquals (self, _ : [c8])-> bool {
        false
    }

    /**
     * Compare two words
     *     
     * @returns: true iif o is of EofWord     
     * */
    pub over opEquals (self, o : &Word)-> bool {        
        return o of EofWord;                    
    }

    /*!
     * ====================================================================================================
     * ====================================================================================================
     * =================================          MISCELLANEOUS          ==================================
     * ====================================================================================================
     * ====================================================================================================
     */
    
    impl Hashable;        
    impl Streamable {
        pub over toStream (self, dmut stream: &StringStream)-> void {                        
            stream:.write (Colors::BOLD)
                :.write ("eof|")
                :.write (" --> ")
                :.write (self.filename)
                :.write (":(")
                :.write (self.line)
                :.write (",")
                :.write (self.col)
                :.write (")")
                :.write (Colors::RESET);                                            
        }
    }
    
}
