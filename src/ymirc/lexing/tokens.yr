in tokens;

use std::syntax::tokenizer;

/**
 * Lazy allocation of a slice containing all the tokens
 * */
pub lazy __TOKEN_LIST__ = copy Tokens::__members__;


/**
 * List of tokens that are marked as skip tokens 
 * */
pub enum
| SPACE            = Tokens::SPACE
| RETURN           = Tokens::RETURN
| RRETURN          = Tokens::RRETURN
| RRETURN_CMP      = Tokens::RRETURN_CMP
| TAB              = Tokens::TAB
 -> SkipTokens;

/**
 * List of tokens that segment a Ymir source file
 * */
pub enum
| AND              = "&"
| ANTI             = "\\"
| ARROW            = "->"
| AT               = "@"
| BACK_QUOTE       = "`"
| BROK_SPACE       = "\u{0xc2}\u{0xa0}"
| COLON            = ":"
| COMA             = ","
| CONGRUENT        = "<=>"
| DAND             = "&&"
| DARROW           = "=>"
| DCOLON           = "::"
| DDOT             = ".."
| DEQUAL           = "=="
| DIV              = "/"
| DIV_AFF          = "/="
| DMINUS           = "--"
| DOLLAR           = "$"
| DOT              = "."
| DOT_AND          = ":."
| DPIPE            = "||"
| DPLUS            = "++"
| DQUOTE           = "\""
| DXOR             = "^^"
| DXOR_AFF         = "^^="
| EQUAL            = "="
| FSTRING          = "f\""
| INF              = "<"
| INF_EQUAL        = "<="
| INTEG            = "?"
| LACC             = "{"
| LCOMM1           = "//"
| LCOMM2           = "/*"
| LCOMM3           = "/*!"
| LCRO             = "["
| LCRO_AND         = ":["
| LEFTD            = "<<"
| LEFTD_AFF        = "<<="
| LPAR             = "("
| MACRO_ACC        = "#{"
| MACRO_CRO        = "#["
| MACRO_PAR        = "#("
| MINUS            = "-"
| MINUS_AFF        = "-="
| NOT              = "!"
| NOT_EQUAL        = "!="
| PERCENT          = "%"
| PERCENT_AFF      = "%="
| PIPE             = "|"
| PLUS             = "+"
| PLUS_AFF         = "+="
| RACC             = "}"
| RCOMM2           = "*/"
| RCRO             = "]"
| RETURN           = "\n"
| RIGHTD           = ">>"
| RIGHTD_AFF       = ">>="
| RPAR             = ")"
| RRETURN          = "\r"
| RRETURN_CMP      = "\r\n"
| SEMI_COLON       = ";"
| SHARP            = "#"
| SPACE            = " "
| SQUOTE           = "'"
| STAR             = "*"
| STAR_AFF         = "*="
| SUP              = ">"
| SUP_EQUAL        = ">="
| TAB              = "\t"
| TDOT             = "..."
| TILDE            = "~"
| TILDE_AFF        = "~="
| TRIPLE_DQUOTE    = "\"\"\""
| UNCONGRUENT      = "<!>"
| XOR              = "^"
 -> Tokens;
