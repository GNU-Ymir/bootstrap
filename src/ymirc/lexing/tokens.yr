in tokens;

use std::syntax::tokenizer;

/**
 * Lazy allocation of a slice containing all the tokens
 * */
pub lazy __TOKEN_LIST__ = copy Tokens::__members__;

/**
 * Enumeration containing the list of opening and closing tokens describing a comment
 * @Values
 *    - .0: opening token
 *    - .1: closing token
 *    - .2: true iif multiline
 *    - .3: true iif export in documentation
 * */
pub enum
| MULTILINE        = (Tokens::LCOMM2, Tokens::RCOMM2, true, true)
| MULTILINE_NO_DOC = (Tokens::LCOMM3, Tokens::RCOMM2, true, false)
| ONELINE          = (Tokens::LCOMM1, Tokens::RETURN, false, true)
 -> CommentTokens;

/**
 * Enumeration containing the list of opening and closing tokens describing a string
 * @Values
 *    - .0: opening token
 *    - .1: closing token
 *    - .2: true iif multiline
 *    - .3: the list of suffixes
 *    - .4: true iif an identifier and not a string
 * */
pub enum
| MULTILINE = (Tokens::TRIPLE_DQUOTE, Tokens::TRIPLE_DQUOTE, true)
| MACRO1    = (Tokens::MACRO_ACC, Tokens::RACC, true)
| MACRO2    = (Tokens::MACRO_PAR, Tokens::RPAR, true)
| MACRO3    = (Tokens::MACRO_CRO, Tokens::RCRO, true)
| STRS      = (Tokens::DQUOTE, Tokens::DQUOTE, false)
| CHARS     = (Tokens::SQUOTE, Tokens::SQUOTE, false)
| IDENT     = (Tokens::BACK_QUOTE, Tokens::BACK_QUOTE, false)
 -> StringTokens;

/**
 * List of tokens that are marked as skip tokens 
 * */
pub enum
| SPACE            = Tokens::SPACE
| RETURN           = Tokens::RETURN
| RRETURN          = Tokens::RRETURN
| RRETURN_CMP      = Tokens::RRETURN_CMP
| TAB              = Tokens::TAB
 -> SkipTokens;

