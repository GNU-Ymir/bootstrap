                self._subTypeValidator.validateClassCtors (alias self, loc, c.getInner ())
            }
            c : &ClassRefType => {
                self._subTypeValidator.validateClassCtors (alias self, loc, c)
            }
            _ => __pragma!panic ();
        }

        self._callOpValidator.validate (alias self, loc, ctors, params)
    }

