in impl_;

use ymirc::utils::format;
use ymirc::lexing::{word, tokens};
use ymirc::semantic::symbol::_;
use ymirc::semantic::generator::_;
use ymirc::syntax::declaration::{impl_, protection};
use ymirc::syntax::expression::_;

use std::stream;

@final
pub class ImplSymbol over Symbol {

    // The syntaxic impl
    let _content : &ImplDecl;

    pub self (loc : &Word, comm : [c8], content : &ImplDecl, protection : Protection)
        with super (loc, comm, isWeak-> false, protection-> protection)
        , _content = content
    {}

    /*!
     * ================================================================================
     * ================================================================================
     * =========================           GETTERS            =========================
     * ================================================================================
     * ================================================================================
     */

    /**
     * @returns: the syntaxic content
     */
    pub fn getContent (self)-> &ImplDecl {
        self._content
    }    

    /*!
     * ================================================================================
     * ================================================================================
     * =========================        MISCELLANEOUS         =========================
     * ================================================================================
     * ================================================================================
     */

    impl Streamable;

}
