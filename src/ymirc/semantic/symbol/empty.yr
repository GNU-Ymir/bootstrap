in empty;

use ymirc::syntax::declaration::protection;
use ymirc::utils::format;
use ymirc::semantic::symbol::_;
use ymirc::lexing::word;
use std::stream;

pub lazy dmut EMPTY_SYMBOL = copy EmptySymbol (loc-> EOF_WORD);

/**
 * Empty symbol that contains nothing
 */
@final
pub class EmptySymbol over Symbol {
    pub self (loc : &Word) with super (loc, ""s8, isWeak-> false, protection-> Protection::PRIVATE) {}
    pub self () with super (EOF_WORD, ""s8, isWeak-> false, protection-> Protection::PRIVATE) {}

    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream : &Formatter) {
            stream:.write ("<empty-symbol>");
        }
    }
}
