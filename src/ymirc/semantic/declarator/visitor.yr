    impl Formattable {

        pub over format (self, dmut stream : &Formatter) {
            stream:.write (" LOCAL : \n");
            self._root.formatSymTree (alias stream);
            stream:.write (" EXTERNAL : \n");
            self._foreignRoot.formatSymTree (alias stream);
        }
    }
    
    
