    }

    /**
     * Declare a conditional block in a class
     * @params:
     *    - c: the conditional to declare
     *    - cl: the class symbol
     */
    fn declareCondBlockClass (self, c : &CondBlockDecl, dmut cl : &ClassSymbol) {
