mod ymirc::semantic::generator::value::literal::none;

import ymirc::lexing::word;
import ymirc::utils::format;

import std::io;
import std::collection::vec;

import ymirc::semantic::generator::value::literal::base;
import ymirc::semantic::generator::type::native::none;
import ymirc::semantic::generator::type::base;
import ymirc::semantic::generator::base;

/**
 * A none value is an empty value that does nothing
 */
pub class NoneValue over LiteralValue {

    /**
     * Create a new empty value
     */
    pub self withLoc (loc : &Word) with super (loc, NoneType::new (loc)) {}    
    pub self () with super (Word::eof (), NoneType::new (Word::eof ())) {}    

    /**
     * ================================================================================
     * ================================================================================
     * =========================          COMPARISON          =========================
     * ================================================================================
     * ================================================================================
     */

    pub over opEquals (self, o : &Generator)-> bool {
        match o {
            NoneValue () => { true }
            _ => { false }
        }
    }

    /**
     * ================================================================================
     * ================================================================================
     * =========================        MISCELLANEOUS         =========================
     * ================================================================================
     * ================================================================================
     */

    impl Streamable;
    impl Formattable {

        pub over format (self, dmut stream : &Formatter) {
            stream:.write ("<none-value>"s8);
        }        
    }        
}

pub static NONE_VALUE = NoneValue::new ();
