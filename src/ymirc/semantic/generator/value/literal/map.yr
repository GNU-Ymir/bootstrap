in map;

use ymirc::lexing::{word, tokens};
use ymirc::syntax::keys;
use ymirc::utils::format;

use std::stream;

use ymirc::semantic::generator::type::native::compound::map;

@final
pub class MapValue over LiteralValue {

    // The keys of the map
    let _keys : [&Value];

    // The values associated to the keys
    let _values : [&Value];

    /**
     * Create a new value
     */
    pub self (loc : &Word, type : &MapType, keys : [&Value], values : [&Value], isReduced : bool = false)
        with super (loc, type, isReduced-> isReduced)
        , _keys = keys
        , _values = values
    {
        let mut throwers : [mut (&Word, &Type)] = [];
        for i in self._keys {
            throwers ~= i.getThrowers ();
        }

        for i in self._values {
            throwers ~= i.getThrowers ();
        }

        self._throwers = throwers;
    }

    /*!
     * ================================================================================
     * ================================================================================
     * =========================           GETTERS            =========================
     * ================================================================================
     * ================================================================================
     */

    /**
     * @returns: the keys of the map
     */
    pub fn getKeys (self)-> [&Value] {
        self._keys
    }

    /**
     * @returns: the values of the map
     */
    pub fn getValues (self)-> [&Value] {
        self._values
    }

    /**
     * @returns: the size of the map literal
     */
    pub fn getLen (self)-> usize {
        self._keys.len
    }

    /*!
     * ================================================================================
     * ================================================================================
     * =========================          COMPARISON          =========================
     * ================================================================================
     * ================================================================================
     */

    pub over opEquals (self, o : &Generator)-> bool {
        if (!self.super.opEquals (o)) return false;

        match o {
            s : &MapValue => {
                if (s._keys.len != self._keys.len) return false;
                if (s._values.len != self._values.len) return false;
                for i in 0us .. self._keys.len {
                    if (s._keys [i] != self._keys [i]) return false;
                }

                for i in 0us .. self._values.len {
                    if (s._values [i] != self._values [i]) return false;
                }

                true
            }
            _ => { false }
        }
    }

    pub over isFullLiteral (self)-> bool {
        false
    }

    /*!
     * ====================================================================================================
     * ====================================================================================================
     * ====================================          CLONING          =====================================
     * ====================================================================================================
     * ====================================================================================================
     */

    pub over clone (self)-> &Value {
        let keys = copy [i.clone () for i in self._keys];
        let vals = copy [i.clone () for i in self._values];

        if let t : &MapType = self._type {
            copy MapValue (self._loc, t,
                           keys-> keys,
                           values-> vals,
                           isReduced-> self._isReduced)
        } else panic;
    }

    /*!
     * ================================================================================
     * ================================================================================
     * =========================        MISCELLANEOUS         =========================
     * ================================================================================
     * ================================================================================
     */

    impl Streamable;
    impl Formattable {
        pub over format (self, dmut stream : &Formatter) {
            stream:.write ('[');
            stream:.entabing ();
            for j, i in self._keys {
                if (j != 0us) stream:.write (", ");
                i.format (alias stream);
                stream:.write (' ', Tokens::DARROW, ' ');
                self._values [j].format (alias stream);
            }
            stream:.detabing ();
            stream:.write (']');
        }
    }
}
